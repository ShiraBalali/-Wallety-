const mongoose = require("mongoose");

const Schema = mongoose.Schema;

let creditCard = new Schema(
  {
    holderName: {
      type: String
    },
    cardNum: {
        type: String
    },
    month: {
      type: String
    },
    year: {
      type: String
    },
    cvv: {
        type: String
    },
    userEmail: {
        type: String
    }
  },
  { collection: "creditCards" }
);

module.exports = mongoose.model("creditCards", creditCard);