<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavingMoneyFragment">


    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Saving"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        android:gravity="center"
        android:id="@+id/rl1">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:src="@drawable/visa_card"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY GOAL"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp"
            android:id="@+id/bankName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="balance"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            android:id="@+id/code"
            android:layout_below="@+id/bankName"
            />



    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl1"
       app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:id="@+id/rl2">

    <ImageView
        android:id="@+id/transferMoneyImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/wallet"
        />

    <TextView
        android:id="@+id/enter_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter amount"
        android:textFontWeight="600"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/transferMoneyImg"
        android:layout_marginTop="100dp"
        />

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="anter amount"
            android:inputType="number"
            android:maxLength="1"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/enter_amount"

            />




    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/linkCardBtn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Link Card"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"
        app:cornerRadius="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl2" />












</androidx.constraintlayout.widget.ConstraintLayout>