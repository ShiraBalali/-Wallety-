<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavingMoneyFragment">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Saving your money"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/rl3">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your goal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="17dp"
            android:textFontWeight="900"
            android:textColor="@color/teal_700"
            />


        <ImageView
            android:id="@+id/goalImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/target"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv5"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your goal"
            android:textFontWeight="600"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:layout_below="@+id/goalImg"
            android:layout_marginTop="8dp"

            />
        <EditText
            android:id="@+id/et3"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:hint="Choose your goal"
            android:inputType="text"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv3"
            android:textSize="12sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goalBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="change"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            app:cornerRadius="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_below="@+id/et3"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/rl3"
        android:gravity="center"
        android:id="@+id/rl1">

        <ImageView
            android:layout_width="310dp"
            android:layout_height="170dp"
            android:src="@drawable/visa_card"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MY GOAL"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="balance"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_below="@+id/tv1"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl1"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/rl2">

        <ImageView
            android:id="@+id/transferMoneyImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/wallet"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
         />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter amount"
            android:textFontWeight="600"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/transferMoneyImg"
            android:layout_marginTop="8dp"
            />

        <EditText
            android:id="@+id/et2"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:hint="Enter amount"
            android:inputType="number"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv4"
            android:textSize="14sp"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/transferBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Transfer my money"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            app:cornerRadius="6sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et2"
            android:layout_below="@+id/et2"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>