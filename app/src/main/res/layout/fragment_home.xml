<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical"
        >

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingTop="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/male"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameHeaderTv"
            android:text="Hello"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/userImage"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:text="Welcome back"
            android:textSize="11sp"
            android:layout_toEndOf="@id/userImage"
            android:layout_below="@id/nameHeaderTv"
            android:layout_marginStart="2dp"
            android:maxLines="1"
            />
    </RelativeLayout>

<include layout="@layout/partial_main_activity" />

        <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        >
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Let's Action"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                 />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/transferMoneyCv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toStartOf="@+id/savingMoneyCv"
        android:layout_below="@+id/textView9"
        app:strokeColor="?colorPrimary"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="7dp">

            <ImageView
                android:id="@+id/transferMoneyImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/transfer_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSFER"
                android:textFontWeight="600"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="Money"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="11sp"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/savingMoneyCv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp"
        android:layout_toRightOf="@+id/transferMoneyCv"
        app:strokeColor="?colorPrimary"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/textView9"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="7dp">

            <ImageView
                android:id="@+id/savingMoneyImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/saving_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVING"
                android:textFontWeight="600"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="Money"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="11sp"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/linkCardCv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp"
        android:layout_toRightOf="@+id/savingMoneyCv"
        app:strokeColor="?colorPrimary"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/textView9"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="7dp">

            <ImageView
                android:id="@+id/linkCardImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_outline_add_card_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LINK"
                android:textFontWeight="600"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:text="Card"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="11sp" />
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
     </RelativeLayout>



   <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv3"
            android:text="Transactions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactions_recList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="10dp"
            tools:listitem="@layout/transaction_row"
            />
      </RelativeLayout>

    </LinearLayout>
 </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>