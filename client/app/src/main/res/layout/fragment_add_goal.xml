<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/teal70background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddGoalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:padding="14dp"
            android:gravity="center"
            android:clipToOutline="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's create your goal"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv2"
                android:text="Add goal"
                android:textFontWeight="400"
                android:textSize="14sp"
                />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/name"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/goal_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Your Goal"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv4"
                android:text="Add Goal's Details"
                android:textFontWeight="400"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/desc"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/goal_input_det"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Your goal's detail" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv6"
                android:text="Add Total Goal Amount"
                android:textFontWeight="400"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/date"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/goal_input_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Goal amount"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColorHint="@android:color/darker_gray"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goal_input_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Create a goal"
                android:background="@drawable/button_bg"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="66dp"
                android:textColor="@color/white">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>